{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "allOf": [
    {
      "$ref": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/appsettings.json"
    }
  ],
  "properties": {
    "AppConfig": {
      "$ref": "#/definitions/AppConfig"
    },
    "Serilog": {
      "$ref": "https://gist.githubusercontent.com/turchenkoalex/ff9dc8443c3002eccf8df58020f82339/raw/6ae8d47908e49e0595694ea73e7f173ffb88cbf9/serilog-configuration-schema.json"
    }
  },
  "definitions": {
    "AppConfig": {
      "type": "object",
      "properties": {
        "AllowedTokens": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "BaseReceiverConfig": {
        "$ref": "#/definitions/BaseReceiverConfig"
        },
        "ReceiverEndpointConfigs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/ReceiverEndpointConfig"
          }
        },
        "UploadConfigs": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/UploadTargetConfig"
          }
        },
        "UploadTargets": {
          "type": [
            "array"
          ],
          "items": {
            "$ref": "#/definitions/UploadTarget"
          }
        },
        "SlackApiOptions": {
          "$ref": "#/definitions/SlackApiOptions"
        },
        "NotificationOptions": {
          "$ref": "#/definitions/NotificationOptions"
        }
      },
      "required": [
        "AllowedTokens",
        "UploadConfigs",
        "UploadTargets"
      ]
    },
    "ClientConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "ClientId": {
          "type": [
            "string",
            "null"
          ]
        },
        "ClientSecret": {
          "type": [
            "string",
            "null"
          ]
        },
        "TenantId": {
          "type": [
            "string",
            "null"
          ]
        },
        "UserName": {
          "type": [
            "string",
            "null"
          ]
        },
        "SiteRelativePath": {
          "type": [
            "string",
            "null"
          ]
        },
        "SharepointHostname": {
          "type": [
            "string",
            "null"
          ]
        },
        "RootDirectory": {
          "type": [
            "string",
            "null"
          ]
        },
        "DriveId": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "ClientId",
        "ClientSecret",
        "TenantId"
      ]
    },
    "NotificationOptions": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "Endpoints": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "ReferralUrlBase": {
          "type": [
            "string",
            "null"
          ]
        },
        "AllowedHostEmails": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      },
      "required": [
        "Endpoints",
        "ReferralUrlBase",
        "AllowedHostEmails"
      ]
    },
    "BaseReceiverConfig": {
      "type": "object",
      "properties": {
        "BaseRouteTemplate": {
          "type": "string"
        }
      }
    },
    "ReceiverEndpointConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "RouteSuffix": {
          "type": "string"
        },
        "ModelTypeName": {
          "type": "string"
        },
        "AuthenticationMechanism": {
          "type": "integer",
          "enum": [
            "Unknown",
            "ZoomBearer"
          ]
        },
        "AssociatedUploadTargetIds": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": [
              "string",
              "null"
            ]
          }
        },
        "IncomingRoute": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "ModelTypeName"
      ]
    },
    "SlackApiOptions": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "BotUserToken": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "BotUserToken"
      ]
    },
    "UploadTarget": {
      "type": [
        "object"
      ],
      "properties": {
        "Name": {
          "type": "string"
        },
        "ConfigId": {
          "type": [
            "string",
            "null"
          ]
        },
        "RelativeRootUploadPath": {
          "type": [
            "string",
            "null"
          ]
        },
        "NamingTemplate": {
          "type": [
            "string",
            "null"
          ]
        },
        "DirectoryNamingTemplate": {
          "type": [
            "string",
            "null"
          ]
        },
        "FileExistsBehavior": {
          "type": "string",
          "enum": [
            "Unknown",
            "Overwrite",
            "Rename",
            "Error"
          ]
        }
      },
      "required": [
        "ConfigId"
      ]
    },
    "UploadTargetConfig": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "Identifier": {
          "type": [
            "string",
            "null"
          ]
        },
        "Type": {
          "type": "string",
          "enum": [
            "Sharepoint",
            "OnedriveUser",
            "OnedriveDrive",
            "Dropbox"
          ]
        },
        "RootPath": {
          "type": [
            "string",
            "null"
          ]
        },
        "ClientConfig": {
          "$ref": "#/definitions/ClientConfig"
        }
      },
      "required": [
        "Identifier",
        "Type",
        "RootPath",
        "ClientConfig"
      ],
      "allOf": [
        {
          "if": {
            "properties": {
              "Type": {
                "enum": [
                  "Sharepoint"
                ]
              }
            }
          },
          "then": {
            "properties": {
              "ClientConfig": {
                "allOf": [
                  {
                    "$ref": "#/definitions/SharepointClientConfig"
                  }
                ]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "Type": {
                "enum": [
                  "OnedriveUser"
                ]
              }
            }
          },
          "then": {
            "properties": {
              "ClientConfig": {
                "allOf": [
                  {
                    "$ref": "#/definitions/OD_UserClientConfig"
                  }
                ]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "Type": {
                "enum": [
                  "OnedriveDrive"
                ]
              }
            }
          },
          "then": {
            "properties": {
              "ClientConfig": {
                "allOf": [
                  {
                    "$ref": "#/definitions/OD_DriveClientConfig"
                  }
                ]
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "Type": {
                "enum": [
                  "Dropbox"
                ]
              }
            }
          },
          "then": {
            "properties": {
              "ClientConfig": {
                "allOf": [
                  {
                    "$ref": "#/definitions/DropboxClientConfig"
                  }
                ],
                "additionalProperties": false
              }
            }
          }
        }
      ]
    },
    "DropboxClientConfig": {
      "type": "object",
      "required": [
        "ApiKey",
        "AppSecret",
        "AdminTeamMemberId"
      ],
      "properties": {
        "ApiKey": {
          "type": "string"
        },
        "AppSecret": {
          "type": "string"
        },
        "RefreshToken": {
          "type": [
            "string",
            "null"
          ]
        },
        "AdminTeamMemberId": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "BaseODClientConfig": {
      "required": [
        "ClientSecret",
        "TenantId",
        "ClientId"
      ],
      "properties": {
        "ClientId": {
          "type": "string"
        },
        "ClientSecret": {
          "type": "string"
        },
        "TenantId": {
          "type": "string"
        },
        "RootDirectory": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "OD_UserClientConfig": {
      "type": "object",
      "required": [
        "UserName"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/BaseODClientConfig"
        }
      ],
      "properties": {
        "UserName": {
          "type": "string"
        }
      }
    },
    "OD_DriveClientConfig": {
      "type": "object",
      "required": [
        "DriveId"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/BaseODClientConfig"
        }
      ],
      "properties": {
        "DriveId": {
          "type": "string"
        }
      }
    },
    "SharepointClientConfig": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/BaseODClientConfig"
        }
      ],
      "required": [
        "SiteRelativePath",
        "SharepointHostname"
      ],
      "properties": {
        "SiteRelativePath": {
          "type": "string",
          "examples": [
            "sites/AllStaff"
          ]
        },
        "SharepointHostname": {
          "type": "string",
          "examples": [
            "contoso.sharepoint.com"
          ]
        }
      }
    }
  }
}
